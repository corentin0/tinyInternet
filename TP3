#eBGP Spring
	bgp router 2.0.0.1
		add peer 1 1.0.0.1
		peer 1.0.0.1 next-hop-self
		peer 1.0.0.1 up
		add peer 200 2.1.0.1
		peer 2.1.0.1 next-hop-self
		peer 2.1.0.1 up
		exit

	bgp router 2.0.0.2
		add peer 1 1.0.0.2
		peer 1.0.0.2 next-hop-self
		peer 1.0.0.2 up
		add peer 200 2.1.0.1
		peer 2.1.0.1 next-hop-self
		peer 2.1.0.1 up
		exit

